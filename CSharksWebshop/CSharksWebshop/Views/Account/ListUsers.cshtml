@using CSharksWebshop.Models
@{
    ViewBag.Title = "ListUsers";
}
<div class="container">
    <div class="row">
        <h2>Users</h2>

        <p>
            @*@Html.ActionLink("Create New", "Create")*@
        </p>
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>
                        Username
                    </th>
                    <th>
                        Role
                    </th>

                </tr>
                </thead>
                @foreach (ApplicationUser item in ViewBag.Users as List<ApplicationUser>)
                {

    <tr>
        <td>
            @item.Id


        </td>
        <td>
            @item.UserName

        </td>

        <td>
            @if (item.Roles.SingleOrDefault(r => r.RoleId == "2" && r.UserId == item.Id) != null)
            {
                @Html.ActionLink("Change role to User", "ChangeToUser", new { id = item.Id })
            }
            else
            {
                @Html.ActionLink("Promote to Admin", "PromoteToAdmin", new { id = item.Id })
            }
            @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
        </td>
    </tr>
    }

        </table>
        </div>
</div>