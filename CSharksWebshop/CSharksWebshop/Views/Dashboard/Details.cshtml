
@{
    ViewBag.Title = "Dashboard";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Dashboard</h1>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-lg-4 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fas fa-user fa-5x"></i>
                        </div>
                        <div><h4>Felhasználók száma: </h4></div>
                        <div class="col-xs-9 text-right">
                            <div class="huge" id="CountCustomers">
                                <span>
                                    @if (ViewBag.CountUsers != null)
                                    {
                                        @ViewBag.CountUsers;
                                    }
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="panel panel-green">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fas fa-cart-arrow-down fa-5x"></i>
                        </div>
                        <div><h4>Megrendelések száma: </h4></div>
                        <div class="col-xs-9 text-right">
                            <div class="huge" id="CountOrders">
                                <div>
                                    <h4>
                                        @if (ViewBag.CountOrders != null)
                                        {
                                            @ViewBag.CountOrders;
                                        }
                                    </h4>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="col-lg-4 col-md-6">
            <div class="panel panel-green">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-tasks fa-5x"></i>
                        </div>
                        <div><h4>Megrendelt termékek száma: </h4></div>
                        <div class="col-xs-9 text-right">
                            <div class="huge" id="CountOrders">
                                <div>
                                    @if (ViewBag.CountOrderEntries != null)
                                    {
                                        @ViewBag.CountOrderEntries;
                                    }
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="panel panel-yellow">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fas fa-tags fa-5x"></i>
                        </div>
                        <div><h4>Termékek száma: </h4></div>
                        <div class="col-xs-9 text-right">
                            <div class="huge" id="CountProducts">
                                <span>
                                    @if (ViewBag.CountProducts != null)
                                    {
                                        @ViewBag.CountProducts;
                                    }
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
